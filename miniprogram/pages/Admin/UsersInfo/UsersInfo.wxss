
.top{
  padding-top:10rpx;
  padding-bottom:10rpx;
  text-align: center;
  font-weight:800;
  font-size: 40rpx;
  border-bottom: 5rpx solid #ddd;
}
.nav_section{
    width:100%;
}
.content{
   width: 96%;
   padding: 0 2% 0 2%;
}
.content text{
  font-size: 36rpx;
  color: rgb(63, 62, 62);
  font-weight: 600;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:20rpx;
    border-bottom:5rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:220rpx;
    height:200rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    padding-left: 20rpx;
    width:480rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_title{
    font-size: 30rpx;
    font-weight: 500;
    color:#000;
    margin-bottom:18rpx;
}
.nav_section_items .section_cont .section_cont_rname{
    font-size:30rpx;
    font-weight: 500;
    color:#000;
    margin-bottom: 18rpx;
}
.nav_section_items .section_cont .section_cont_address{
    font-size:30rpx;
    font-weight: 500;
    color:#000;
    margin-bottom: 18rpx;
}
.nav_section_items .section_cont .section_cont_time{
    font-size:26rpx;
}
