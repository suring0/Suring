.edit_wrap{
  font-size:32rpx;
  font-weight: 800;
  padding:60rpx 0rpx 20rpx;
}
.background {
height:100%;
width:100%;
position:fixed;
z-index: -1;
}
.form_group{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin:20rpx;
  line-height: 60rpx;
}
.form_group text{
  text-align: center;
  width:35%;
  height:70rpx;
}

.form_group picker{
position: relative;
  width:65%;
  border:1px solid rgb(197, 197, 197);
  border-radius:8rpx;
  height:70rpx;
  line-height: 60rpx;
}
.form_group picker text {
  padding-left:20rpx;
}
.form_group .inputcode{
  border:1px solid rgb(197, 197, 197);
  line-height:60rpx;
  height:70rpx;
  width:60%;
  padding-left:20rpx;
  margin-right:14rpx;
}
.button{
  margin:12% auto;
  top:100rpx;
  width:80%;
  font-size:32rpx;
  font-weight: 800;
}
.placeholder_style{
  font-family:'微软雅黑';
  color:#adadad;
}