.page{
  height: 100%;
}

.audio{
  margin-top: 2%;
}
.video{
  width: 98%;
  margin: 2% 1% 0 1%;
  text-align: center;

}
.title{
  margin-top: 1%;
  margin-bottom: 1%;
  text-align: center;
  font-size: 38rpx;
  font-weight:800;
}
.content-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 0.5%;
  margin-bottom: 2%;
  font-size: 28rpx;
  font-weight:600;
}
.avatarUrl{
  height: 40rpx;
}
.avatarUrl image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.title-time{
   margin-right: 10rpx;
}

.article {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  width:100%;
}
.content-text {
  width:96%;
  margin: 0 1.5% 0 2.5%;
}
.content-text text{
  font-size: 38rpx;
  color: rgb(63, 62, 62);
  font-weight: 600;
}

.content-img {
  width: 98%;
  min-height: 100px;
  margin: 0 1% 0 1%;
}
.line {
  width: 100%;
  height: 1px;
  margin-top: 20px;
  background-color: #ccc;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  z-index: -99;
}
.button{
  width: 100%;
  margin-top: 1%;
}
.button1{
    width:40%;
    height: 80rpx;
    font-size:35rpx;
    float:left;
    color:#5495e6;
    
    margin-left: 10%;
}
.button2{
    width:40%;
    height: 80rpx;
    font-size:35rpx;
    float:right;
    color:#5495e6;
    margin-right: 10%;
}
.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 45%;
  margin-right: 55%;
  margin-top: 20px;
  margin-bottom: 20px;
  position: fixed;
  bottom: 0;
}

.like-icon {
  width: 48px;
  height: 48px;
}

.like-text {
  font-size: 16px;
  color: rgb(17, 14, 16);
  font-weight: bold;
}